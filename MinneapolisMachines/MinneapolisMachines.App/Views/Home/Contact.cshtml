@model MinneapolisMachines.Models.Contacts.Contact

@{
    ViewBag.Title = "Contact";
}

<h2>Contact</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        @Html.ValidationSummary()

        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Name)
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Email)
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Phone)
                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(c => c.Message)
                @Html.TextAreaFor(c => c.Message, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        }
    </div>

    <div class="col-md-6">
        <div id="googleMap" style="width:100%;height:400px;"></div>
    </div>
</div>

<script>
    function myMap() {
        var mapProp= {
          center:new google.maps.LatLng(51.508742,-0.120850),
          zoom:5,
        };
        var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);
    }
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAqM9tR3ORg2INKKnDrgF8X6zLwHLOInFE&callback=myMap"></script>