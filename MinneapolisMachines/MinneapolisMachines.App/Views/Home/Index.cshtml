@model List<MinneapolisMachines.Models.Specials.Special>

@{
    ViewBag.Title = "Index";
}

<!-- jumbotron/carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @for (var i = 0; i < Model.Count; i++)
        {
            if (i == 0) //first item needs to have active class for the carousel to display
            {
                <div class="carousel-item active">
                    <div class="carousel-item-content d-block w-100">
                        <div class="carousel-item-text">
                            <h3>@Model.ElementAt(i).Title</h3>
                            <p>@Model.ElementAt(i).Description</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <div class="carousel-item-content d-block w-100">
                        <div class="carousel-item-text">
                            <h3>@Model.ElementAt(i).Title</h3>
                            <p>@Model.ElementAt(i).Description</p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<hr />

<h3>Featured Vehicles</h3>
